<%- include('../includes/head') %>
</head>
<body>
   <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                    <h2 class="float-left" >Lisf of user</h2>
                    <a class="float-right btn btn-primary" href="/users/add-new">Add New</a>
                <table class="table table-inverse">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% users.forEach(function(user,index){ %>
                      <tr>
                        <th scope="row"><%= index+1 %></th>
                        <td><%= user.name %></td>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td>
                            <a href="/users/user-edit/<%= user.id%>" class="btn btn-warning">Edit</a>
                            <a href="/users/user-delete/<%= user.id%>" class="btn btn-danger">Delete</a>
                        </td>
                      </tr>
                      <% }); %>
                    </tbody>
                  </table>
            </div>
        </div>
    </div>
<%- include('../includes/end') %>